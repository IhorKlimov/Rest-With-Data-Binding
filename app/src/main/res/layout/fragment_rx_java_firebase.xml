<layout>

    <data>

        <variable
            name="fragment"
            type="com.myhexaville.restwithdatabinding.firebase.RxJavaFirebaseFragment" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.myhexaville.restwithdatabinding.firebase.RxJavaFirebaseFragment">

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{fragment.signUp}"
            android:text="signUp" />

        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:onClick="@{fragment.deleteAccount}"
            android:text="delete account" />
    </FrameLayout>
</layout>